<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PasswordInputEditText">
        <!--密码的长度-->
        <attr name="r_password_count" format="integer"/>

        <!--密码之间的间隙-->
        <attr name="r_password_space" format="dimension"/>

        <!--密码边框的宽度-->
        <attr name="r_border_width" format="dimension"/>

        <!--高亮的颜色-->
        <attr name="r_password_highlight_color" format="color"/>

        <!--密码框背景颜色-->
        <attr name="r_password_bg_color" format="color"/>

        <!--密码提示颜色-->
        <attr name="r_password_color" format="color"/>

        <!--密码提示框的颜色-->
        <attr name="r_password_border_color" format="color"/>
    </declare-styleable>
</resources>